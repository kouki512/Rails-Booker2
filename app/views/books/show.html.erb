<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/user_info', user: @user, new_book: @new_book %>


    <div class="col-md8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        
        <tbody>
          <tr>
            <td>
              <a href="#"><%= attachment_image_tag @user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image-icon.jpg" %></a>
            </td>
            <td>
                <%= @book.title %>
            </td>
            <td><%= @book.body %></td>
            
            <% if @user== current_user %>
              <td>
                <%= link_to edit_book_path(@book), class:"btn btn-sm btn-success" do %>
                <p>Edit</p>
                <% end %>
                
                <%= link_to book_path(@book), method: :delete, class:"btn btn-sm btn-success", "data-confirm":"本当に削除しますか？" do %>
                <p>Destroy</p>
                <% end %>
                
              </td>
            <% end %>
          </tr>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
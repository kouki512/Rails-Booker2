<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/user_info', user: @user, new_book: @new_book %>


    <div class="col-md8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %> 
               <%= attachment_image_tag @user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no_image-icon.jpg" %>
               <% end %>
               <div class="show-name">
              <%= link_to user_path(@user) do%>
               <%= @user_name.name %>
              <% end %>
                
              </div>
              
            </td>
            
            <td>
              <%= link_to books_path do %> 
                 <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            
            <% if @user== current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success"  %>
                
                
                <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-success", "data-confirm":"本当に削除しますか？"  %>
                
                
              </td>
            <% end %>
          </tr>
          
        </tbody>
      </table>
    </div>
  </div>
</div>
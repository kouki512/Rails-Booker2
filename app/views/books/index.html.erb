<div class="container px-5 px-sm-0">
  <div class="errors">
  <% if @new_book.errors.any? %>
    <h3><%= @new_book.errors.count %>errors prohibited this obj from being saved:</h3>
    <p><% @new_book.errors.full_messages.each do |message| %></p>
    <ul>
    <li><%= message %></li>
    </ul>
      
    <% end %>
  <% end %>
  </div>
  <div class="row">
    

     <div class="col-md3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        
        <%= link_to  edit_user_path,class:"btn btn-outline-secondary btn-block " do%>
        <i class="fas fa-user-cog"></i>
        <% end %>
      <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog " href="/users/:id/edit"></a>-->
      
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:new_book,local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <br>
      <h5>Opinion</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'CreateBook' %>
      <% end %>
    </div>
    
    <div class="col-md8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <a href="#"><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image-icon.jpg" %></a>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
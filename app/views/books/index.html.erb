<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li><a class="fas fa-home nav-link text-light" href="/users/28562"> Home</a></li>
          <% if user_signed_in? %>
          <li><a class="fas fa-users nav-link text-light" href="/users"> Users</a></li>
          <% else %>
          <li><a class="fas fa-users nav-link text-light" href="/about"> About</a></li>
          <% end %>
          <li><a class="fas fa-book-open nav-link text-light" href="/books"> Books</a></li>
          <li><a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out"> logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th>example太郎</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>自己紹介が入ります（後ほど機能追加）</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog " href="/users/28683/edit"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with mode:@book,local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <br>
      <p>Body</p>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'CreateBook' %>
      <% end %>
      
    </div>
  </div>
</div>
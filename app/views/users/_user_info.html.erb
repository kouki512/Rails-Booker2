      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', size:"100x100",  fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        
        <%= link_to  edit_user_path(user.id),class:"btn btn-outline-secondary btn-block " do%>
        <i class="fas fa-user-cog"></i>
        <% end %>
      <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog " href="/users/:id/edit"></a>-->
      
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:new_book,local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <br>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'Create Book', class:"create-book" %>
      <% end %>
    

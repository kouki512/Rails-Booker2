    <div class="col-md3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user_name.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user_intro.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog " href="/users/28683/edit"></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:new_book,local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <br>
      <h5>Opinion</h5>
      <%= f.text_area :body %>
      <br>
      <%= f.submit 'CreateBook' %>
      <% end %>
    </div>

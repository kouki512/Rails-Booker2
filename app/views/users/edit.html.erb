<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>User info</h1>
  <div class="errors">
  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <p><% @user.errors.full_messages.each do |message| %></p>
    <ul>
    <li><%= message %></li>
    </ul>
      
    <% end %>
  <% end %>
  </div>
      
     <%= form_with model:@user,local:true do |f| %>
      <div class="input-form">
        <p>Name</p>
        <%= f.text_field :name, class:"user-name" %>
        <p>Image</p>
        <%= f.attachment_field :profile_image %>
        
        <p>Introduction</p>
        <%= f.text_area :introduction,class:"user-intro" %>
      </div>
      <div class="submit">
        <%= f.submit 'Update User', class:"edit-input"%>
      </div>
     <% end %>
      
    </div>
  </div>
</div>
